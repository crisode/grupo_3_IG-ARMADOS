<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header") %>
            <div class="carga-producto">
                <div class="container">
                    <div class="content-form row">
                        <form action="" id="form" method="POST" enctype="multipart/form-data">
                          

                            <!-- !IMAGEN -->
                            <section class="product-img col-12 col-md-12 col-lg-6">
                                <div class="img-container" id="imagenPreview">
                                    <img src="/images/productos/default-image.png" alt="">
                                </div>
                                <span id="errorImagen"></span>
                              
                                <div class="custom-input-file col-md-6 col-sm-6 col-xs-6">
                                <input class="input-file" type="file" name="image" id="imagen">Cargar Imagenes
                                </div>
                            </section>
                            <!-- !IMAGEN -->
                            
                             <!-- !IMOUTS -->
                             <div class="selectores col-lg-6">
                            <section class="product-info col-12 col-md-8">
                                <div class="box ">
                                    <h2>Titulo del producto</h2>
                                    <input type="text" name="title" id="titulo"  value="<%= (typeof oldProduct != "undefined" && oldProduct.title ? oldProduct.title : null) %>">
                                    <span id="errorTitulo"></span>
                                    <span class="text-danger">
                                        <%= (typeof errores !="undefined" && errores.title ? errores.title.msg : null)
                                            %>
                                    </span>
                                    <h2>Precio del producto</h2>
                                    <input type="text" name="price" id="precio" value="<%= (typeof oldProduct != "undefined" && oldProduct.price ? oldProduct.price : null) %>">
                                    <span id="errorPrecio"></span>
                                    <span class="text-danger">
                                        <%= (typeof errores !="undefined" && errores.price ? errores.price.msg : null)
                                            %>
                                    </span>
                                </div>

                                <div class="box2">
                                    <h2>Oferta</h2>
                                    <input type="text" name="insale" id="oferta" value="<%= (typeof oldProduct != "undefined" && oldProduct.insale ? oldProduct.insale : null) %>">
                                    <span id="errorOferta"></span>
                                    <span class="text-danger">
                                        <%= (typeof errores !="undefined" && errores.insale ? errores.insale.msg : null)
                                            %>
                                    </span>

                                    <h2>Garantia</h2>
                                    <select name="garantia" id="garantia">
                                        <option value="<%= (typeof oldProduct != "undefined" && oldProduct.garantia ? oldProduct.garantia : null) %>" hidden selected></option>
                                        <% garantias.forEach(garantia=> { %>
                                            <option value="<%= garantia.id%>">
                                                <%= garantia.type%>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <span id="errorGarantia"></span>
                                </div>
                            </section>

                            <article class="product-detail--title col-md-8">
                                <h2>Detalle</h2>
                            </article>

                            <section class="product-detail col-12 col-md-8">
                                <div class="box3">
                                    <h2>Componente</h2>
                                    <select name="component" id="componente">
                                        <option value="<%= (typeof oldProduct != "undefined" && oldProduct.component ? oldProduct.component : null) %>" hidden selected></option>
                                        <% componentes.forEach(componente=> { %>
                                            <option value="<%= componente.id%>">
                                                <%= componente.name%>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <span id="errorComponente"></span>
                                    <h2>Marca</h2>
                                    <select name="mark" id="marca">
                                        <option value="<%= (typeof oldProduct != "undefined" && oldProduct.mark ? oldProduct.mark : null) %>" hidden selected></option>
                                        <% marcas.forEach(marca=> { %>
                                            <option value="<%= marca.id%>">
                                                <%= marca.name%>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <span id="errorMarca"></span>
                                    <h2 class="mt-3">Category</h2>
                                    <select name="category" id="categoria">
                                        <option value="<%= (typeof oldProduct != "undefined" && oldProduct.category ? oldProduct.category : null) %>" hidden selected></option>
                                        <% categorias.forEach(categoria=> { %>
                                            <option value="<%= categoria.id%>">
                                                <%= categoria.name%>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <span id="errorCategoria"></span>
                                </div>

                                <div class="box4">
                                    <h2>Modelo</h2>
                                    <input value="<%= (typeof oldProduct != "undefined" && oldProduct.model ? oldProduct.model : null) %>" type="text" name="model" id="modelo">
                                    <span id="errorModelo"></span>
                                    <span class="text-danger">
                                        <%= (typeof errores !="undefined" && errores.model ? errores.model.msg : null)
                                            %>
                                    </span>
                                    <h2>En Stock</h2>
                                    <select name="stock" id="stock">
                                        <option value="<%= (typeof oldProduct != "undefined" && oldProduct.stock ? oldProduct.stock : null) %>" hidden selected></option>
                                        <option value="si">
                                            <p>Si</p>
                                        </option>
                                        <option value="no">
                                            <p>No</p>
                                        </option>
                                </div>
                                </select>
                                <span id="errorStock"></span>
                            </section>
                        </div><!-- !IMOUTS -->



                            <!-- !text area descripcion -->
                            <div class="text-descripcion col-md-8 col-lg-6">
                                <article class="product-description--title ">
                                    <h2>Descripcion</h2>
                                </article>
                                <span class="text-danger">
                                    <%= (typeof errores !="undefined" && errores.description ? errores.description.msg :
                                        null) %>
                                </span>
                                <section class="product-description col-12">
                                    <textarea name="description" id="descripcion" cols="30" rows="6"></textarea>
                                </section>
                                <span id="errorDescripcion"></span>
                            </div>
                            <!-- !text area descripcion -->





                            <!-- !text area Caracteriticas -->
                            <div class="text-caracteristicas col-md-8 col-lg-6">
                                <article class="product-feature--title">
                                    <h2>Caracteristicas</h2>
                                </article>
                                <span class="text-danger">
                                    <%= (typeof errores !="undefined" && errores.features ? errores.features.msg : null)
                                        %>
                                </span>
                                <section class="product-feature col-12">
                                    <textarea name="features" id="caracteristicas" cols="30" rows="6"></textarea>
                                </section>
                                <span id="errorCaracteristicas"></span>
                            </div>
                            <!-- !text area Caracteriticas -->

                            <!-- !button -->
                            <div class="product-botom col-md-8 col-lg-8">
                                <button id="botonEnviar" type="submit" onclick="confirm">Agregar</button>
                                <span id="errorBoton" class=""></span>
                            </div>
                            <!-- !button -->
                        </form>


                    </div>

                </div>

            </div>


            <%- include("../partials/footer") %>
                <script src="../javascript/crearProducto.js"></script>
                <%- include("../partials/scriptBS") %>
                <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
                <script src="//cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>            
                    <script src="/javascript/confirm.js"></script>
    </body>

    </html>