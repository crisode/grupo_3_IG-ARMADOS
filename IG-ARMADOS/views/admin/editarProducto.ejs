<%- include("../partials/head")  %> 
<body>
    <%- include("../partials/header")  %> 
    <div class="carga-producto">
        <div class="container">
            <div class="content-form row">
                <form action="/admin/upload/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <section class="product-img col-12">
                        <label for="img">Cargar Imagenes</label>
                            <input type="file" name="image" id="img" value="<%= producto.image %> ">
                        
                        
                    </section>
        
                    <section class="product-info col-12">
                        <div class="box ">
                        <h2>titulo del producto</h2>
                        <input type="text" name="title" id="" value="<%= producto.title %>">
                        <h2>Precio del producto</h2>
                        <input type="text" name="price" id="" value="<%= producto.price %> ">
                        </div>
    
                        <div class="box2">
                        <h2>oferta</h2>
                        <input type="text" name="insale" value="<%= producto.insale %> ">
                        <h2>garantia</h2>
                        <select name="garantia" id="" value="<%= producto.garantia %> ">
                            <option value="si"><p>Si</p></option>
                            <option value="no"><p>No</p></option>
                        </div>
                        </select>
                    </section>
        
                    <article class="product-detail--title">
                        <h2>detalle</h2>
                    </article>
        
                    <section class="product-detail col-12">
                        <div class="box3">
                        <h2>componente</h2>
                        <input type="text" name="component" id="" value="<%= producto.component %> ">
                        <h2>marca</h2>
                        <input type="text" name="mark" id="" value="<%= producto.mark %>">
                        <h2 class="mt-3">category</h2>
                        <select name="category" id="" value="<%= producto.category %>">
                            <option value="si"><p>novedades</p></option>
                            <option value="no"><p>destacados</p></option>
                        </select>
                        </div>
    
                        <div class="box4">
                        <h2>modelo</h2>
                        <input type="text" name="model" value="<%= producto.model %>">
                        <h2>en stock</h2>
                        <select name="stock" id="" value="<%= producto.stock %>">
                            <option value="si"><p>Si</p></option>
                            <option value="no"><p>No</p></option>
                        </div>
                        </select>
                    </section>
        
                    <article class="product-description--title">
                        <h2>descripcion</h2>
                    </article>
        
                    <section class="product-description col-12">
                        <textarea name="description" id="" cols="30" rows="10"><%= producto.description %></textarea>
                    </section>
        
                    <article class="product-feature--title">
                        <h2>caracteristicas</h2>
                    </article>
        
                    <section class="product-feature col-12">
                        <textarea name="features" id="" cols="30" rows="10"><%= producto.features %></textarea>
                    </section>
                    
                    <div class="product-botom">
                        <button type="submit">Enviar</button>
        
                    </div>
                </form>
        
    
            </div>
            
        </div>

    </div>

    
    <%- include("../partials/footer")  %> 

    <%- include("../partials/scriptBS")  %> 
</body>
</html>